<html>
<head>
  <title>Deal Plug - <%= @title || "Best Online Social Shopping Deals" %></title>
  <%= stylesheet_link_tag "reset", "main", "scaffold" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-6059803-9']);
    _gaq.push(['_trackPageview']);
    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
</head>
<body>

<div id="container">  
  <div id="banner">
    <%= link_to image_tag("logo.png"), root_path, :alt => "Latest deals" %>
    <h2 id="tagline">Find and share best online shopping deals</h2>
  </div>
  <div id="nav">
    <div id="links">
      <%= link_to "Latest deals", root_path %> |
      <%= link_to "Popular deals", popular_path %>
    </div>

    <% if user_signed_in? %>
      <%= link_to 'Submit a deal', new_deal_path, :id => "submit_deal" %>
      [<%= current_user.points %>] <%= current_user.username %> |
      <%= link_to "Sign out", destroy_user_session_path %>
    <% else %>
      <%= link_to "Sing up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
    <% end %>
  </div>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>
</div>
</body>
</html>
